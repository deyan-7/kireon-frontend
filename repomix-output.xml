textarea {
  /* vertical padding = var(--pico-form-element-spacing-vertical) = 0.75rem */
  /* horizontal padding = var(--pico-form-element-spacing-horizontal) = 1rem */
  padding: 0.75rem 1rem;
}

/* Remove Picoâ€™s focus outline/box-shadow so nothing â€œlights upâ€ on focus */
input:focus,
textarea:focus {
  outline: none;
  box-shadow: none;
